@import 'nib'

#counterparty
	margin 40px 0
	position relative

.controls
	padding 3px 0
	position absolute
	right 0
	top 0
	
	.arrow
		color #0065AE
		transform rotate(90deg)
		text-decoration none
		&:hover
			cursor pointer
	.close
		background #9BA0AF
		border-radius 100%
		color #242F46
		display none
		font-size 1rem
		margin 0 5px
		padding 2px 3px 1px 4px
		text-decoration none

#counterparty-text
	background #081325
	border none
	box-sizing border-box
	color #FFF
	padding 3px 10px 5px
	position relative
	width 100%
	&:hover,
	&:focus
		background #242F46

.list
	background #FFF
	border 1px solid #9A9FA6
	border-radius 4px
	color #565759
	max-height 180px
	opacity 0
	overflow auto
	transition opacity 0.5s ease

	dt,
	dd
		padding 3px 10px
	dt
		background #D7D9DF
	
	dd:hover
		background #C0EAFF
		color #242426
	dd:hover.active
	.active
		background #0065AE
		color #FFF
		
.open 
	.list
		opacity 1

	.arrow
		transform rotate(260deg)
		
	.close
		display inline-block